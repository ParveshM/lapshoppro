<main class="main-wrap">
    <header class="main-header navbar">
        <div class="col-nav  ms-auto ">
            <ul class="nav">
                <li class="dropdown nav-item dropleft">
                    <a class="dropdown-toggle" data-bs-toggle="dropdown" href="#" id="dropdownAccount"
                        aria-expanded="false"> <img class="img-xs rounded-circle"
                            src="/admin/assets/imgs/people/3251650.png" alt="User"></a>
                    <div class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownAccount">
                        <a class="dropdown-item text-danger" href="/admin/logout"><i
                                class="material-icons md-exit_to_app"></i>Logout</a>
                    </div>
                </li>
            </ul>
        </div>
    </header>

    <div class="container">
        <div class="d-flex justify-content-between ">
            <h1 class="mt-4">Coupons</h1>
            <div>
                <a href="/admin/coupon/add-coupon"> <button class="btn btn-primary mt-4">Add Coupon</button></a>
            </div>
        </div>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Coupon Code</th>
                    <th>Discount Type</th>
                    <th>Percentage</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if (coupons.length>0) { %>
                    <% coupons.forEach(element=> { %>

                        <tr>
                            <td>
                                <%= element.code %>
                            </td>
                            <td>
                                <%= element.discountType %>
                            </td>
                            <td>
                                <%= element.discountAmount %>
                            </td>

                            <td>
                                <%= (element.timestamp).toLocaleDateString('en-IN', { year: 'numeric' , month: 'long' ,
                                    day: 'numeric' }) %>
                            </td>
                            <td>
                                <%= (element.expirationDate).toLocaleDateString('en-IN', { year: 'numeric' ,
                                    month: 'long' , day: 'numeric' }) %>
                            </td>


                            <td>
                                <a href="/admin/coupons/edit-coupon/<%= element._id %>">
                                    <button class="btn btn-info btn-sm ml-2 "><i
                                            class="material-icons md-edit pb-1"></i></button>
                                </a>
                            </td>
                        </tr>
                        <% }) %>
                            <% } else { %>
                                <h2>No Coupons !</h2>
                                <% } %>

            </tbody>
        </table>
    </div>