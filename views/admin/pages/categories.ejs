<a href="/admin/addCategory"><button class="btn btn-primary  float-right">AddCategory</button></a>
<!-- Page Content -->
<div class="container mt-4">
    <h1>Category Management</h1>

    <div class="col-search ml-4 mb-2">
        <form class="searchform">
            <div class="input-group">
                <input list="search_terms" type="text" class="form-control" placeholder="Search term">
                <button class="btn btn-light bg" type="button"> <i class="material-icons md-search"></i></button>
            </div>
        </form>
    </div>
    <!-- Category Table -->
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>List/unList</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
             <% if (catList?.length>0) { %>
              
                <% for( let i = 0; i < catList.length; i++ ) { %>
                
                    <tr>
                    <td> <%-  i+1 %> </td>
                    <td> <%- catList[i].categoryName %> </td>
                    <td>
                    <% if (catList[i].list) { %>

                        <form action="/admin/category/list/<%- catList[i]?._id %>" method="post">
                            <button type="submit" class="btn btn-success btn-sm unblock-button">List</button>
                        </form>

                        <% } else { %>
                            <form action="/admin/category/unList/<%- catList[i]?._id %>" method="post">
                                <button type="submit" class="btn btn-danger btn-sm block-button">unList</button>
                            </form>
                            <% } %>
                     </td>
                  <td>
                        <div class="d-flex justify-content-even">
                            <a href="/admin/editCategory/<%- catList[i]._id %>">
                                <button class="btn btn-info btn-sm"><i class="material-icons md-edit pb-1"></i></button>
                            </a>
                            <form action="/admin/deleteCategory/<%- catList[i]._id %>" method="post">
                                <button class="btn btn-danger btn-sm ml-2"><i class="material-icons md-delete pb-1 "></i></button>
                            </form>
                        </div>
                    </td>
                    
                    <td></td>
                        </tr>
                        
                        <% } %>

                        
                        <% } else { %>
                            <h2>NO CATOGERIES FOUND</h2>
                            <% } %>
           
        </tbody>
    </table>
</div>

<!-- Add Category Modal -->
<div class="modal fade" id="addCategoryModal" tabindex="-1" role="dialog" aria-labelledby="addCategoryModalLabel"
    aria-hidden="true">
    <!-- Add category modal content -->
</div>

<!-- Edit Category Modal -->
<div class="modal fade" id="editCategoryModal" tabindex="-1" role="dialog" aria-labelledby="editCategoryModalLabel"
    aria-hidden="true">
    <!-- Edit category modal content -->
</div>

