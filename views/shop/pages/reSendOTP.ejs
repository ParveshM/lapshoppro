<div class="container mt-5 my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <% if ( typeof message !=='undefined' ) { %>
                <div class="alert alert-info fade show mt-3 " id="message" role="alert">
                    OTP is Resent to your <%= message %>, please verify !
                </div>
                <% } %>
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title">OTP Verification</h5>
                        </div>
                        <div class="card-body text-center">

                            <form action="/reSendOTP" method="post">
                                <div class="form-group">
                                    <label for="otp">Enter OTP:</label>
                                    <input type="text" class="form-control" id="otp" name="otp" placeholder="Enter OTP"
                                        required>
                                </div>
                                <button type="submit" class="btn btn-primary mt-2">Verify
                                    OTP</button>
                            </form>
                            <button type="submit" id="resendOTPButton" class="btn btn-warning mt-3" disabled><a
                                    href="/reSendOTP">Resend OTP</a></button>
                            <div id="timer" class="mt-3">Timer: 1:00</div>
                        </div>
                    </div>
        </div>
    </div>
</div>


<style>
    /* custom-style.css */

    .alert {
        width: 80%;
        margin: auto;
        margin-bottom: 10px;

    }

    .container {
        background-color: #f9f9f9;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    }

    .card {
        border: none;
    }

    .card-header {
        background-color: lightgray;
        color: #fff;
        text-align: center;
        padding: 15px 0;
    }

    .card-title {
        font-size: 24px;
    }

    .form-group label {
        font-weight: bold;
    }

    #otp {
        border: 1px solid #ccc;
        border-radius: 5px;
        padding: 10px;
    }

    #timer {
        font-size: 18px;
        font-weight: bold;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
    }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
    }

    .btn-primary:hover,
    .btn-secondary:hover {
        background-color: #0056b3;
    }

    .btn:disabled {
        opacity: 0.7;
        cursor: not-allowed;
    }
</style>

<script>
    // Set the initial time to 60 seconds (1 minute)
    let timerSeconds = 30;

    // Function to update the timer display
    function updateTimer() {
        const timerElement = document.getElementById("timer");
        timerElement.textContent = `Timer: ${Math.floor(timerSeconds / 60)}:${(timerSeconds % 60)
            .toString()
            .padStart(2, "0")}`;

        if (timerSeconds <= 0) {

            document.getElementById("resendOTPButton").removeAttribute("disabled");
        } else {
            // Continue the countdown
            timerSeconds--;
            setTimeout(updateTimer, 1000); // Update the timer every 1 second
        }
    }
    updateTimer();

    const alert = document.getElementById('message')
    setTimeout(() => {
        alert.style.display = 'none'
    }, 3000);
</script>