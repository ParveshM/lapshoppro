    }
  }

  @keyframes scaleForward {
    0% {
      transform: scale(.85);
    }

    100% {
      transform: scale(1);
    }
  }

  @keyframes quickScaleDown {
    0% {
      transform: scale(1);
    }

    99.9% {
      transform: scale(1);
    }

    100% {
      transform: scale(0);
    }
  }

  @keyframes slideUpLarge {
    0% {
      transform: translateY(0%);
    }

    100% {
      transform: translateY(-100%);
